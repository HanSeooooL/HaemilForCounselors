# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS'] # nil ì´ë©´ RN ê¸°ë³¸(ì •ì  ë¼ì´ë¸ŒëŸ¬ë¦¬)
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'HaemilForCounseolrs' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    # Flipperë¥¼ ì“°ê³  ìˆê³  linkageê°€ dynamicì´ë©´ ì¶©ëŒ ê°€ëŠ¥ â†’ í•„ìš”ì‹œ ë„ê¸°
    # :flipper_configuration => FlipperConfiguration.disabled
  )

  # ğŸ”§ í•µì‹¬: Swift podì´ ì •ì ìœ¼ë¡œ ë§í¬ë  ë•Œ ëª¨ë“ˆ ë§µ ë¬¸ì œ í•´ê²°
  pod 'GoogleUtilities', :modular_headers => true
  pod 'FirebaseCoreInternal', :modular_headers => true
  # (ë³´í†µ ì´ ë‘ ì¤„ë¡œ ì¶©ë¶„í•©ë‹ˆë‹¤. ë“œë¬¼ê²Œ FirebaseCoreê¹Œì§€ í•„ìš”í•˜ë©´ ì•„ë˜ë¥¼ ì¶”ê°€)
  # pod 'FirebaseCore', :modular_headers => true

  # (ìë™ ë§í¬ë¡œ lottie-react-native ë° lottie-ios ì²˜ë¦¬)

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
      # :ccache_enabled => true
    )

    # Xcode 15 í™˜ê²½ì—ì„œ ì¢…ì¢… ìƒê¸°ëŠ” í—¤ë” ê²€ìƒ‰ ê²½ë¡œ/ë¹Œë“œ ì„¸íŒ… ì •ë¦¬ (ì•ˆì „ì¥ì¹˜)
    installer.pods_project.targets.each do |t|
      t.build_configurations.each do |config|
        # ëª¨ë“ˆ ìºì‹± ë¬¸ì œ ì˜ˆë°©
        config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
      end
    end
  end
end